<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="402dp"
        android:layout_height="398dp"
        android:layout_marginTop="116dp"
        android:background="#2ECCFA"
        android:fontFamily="@font/nanumb"
        android:text="실행할 사용자를 선택해주세요"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bal"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/nanumb"
        android:text="발송인으로 실행"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_su"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nanumr"
        android:text="수령인으로 실행"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image22"
        android:layout_width="190dp"
        android:layout_height="244dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_su"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/robot" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="201dp"
        android:layout_height="229dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bal"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/recive" />



</androidx.constraintlayout.widget.ConstraintLayout>